  "devDependencies": {
    "@types/express": "^4.17.11",
    "nodemon": "^2.0.7",
    "sqlite3": "^5.0.2"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "pg": "^8.6.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.32"
  }
